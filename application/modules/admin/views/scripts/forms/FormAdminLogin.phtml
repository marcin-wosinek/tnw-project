		<div id="iDivPassword">
			<label class="smallInput">Password:</label><br />
			<span><?php echo $this->element->passwordPassword; ?></span>
		</div>
		<div id="iDivSubmit">
			&nbsp;<?php echo $this->element->submitLogin; ?>
		</div>
	</form>
</div>