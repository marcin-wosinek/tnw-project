<?php
$sResponse = Zend_Registry::get('Authentication Response');
switch ($sResponse) {
	case 'login-failed':
		?>
<p class="cPLoginResponse">Your login attempt has failed. We could not verify you as a registered member. Please try again.</p>
		<?php
		break;
	case 'login-invalid':
		?>
<p class="cPLoginResponse">Your did not provide the necessary information. Provide both your Username & Password and please try again.</p>
		<?php
		break;
}
?>
<div id="iDivLoginContainer">
	<h2>Login</h2>
	<p id="iPForgotPassword"><a href="#">Forgot Password?</a></p>
